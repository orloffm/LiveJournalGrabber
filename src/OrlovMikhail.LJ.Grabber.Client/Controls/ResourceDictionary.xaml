<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <Thickness x:Key="UsualMargin">8</Thickness>
    <sys:Double x:Key="NarrowButtonWidth">35</sys:Double>
    <sys:Double x:Key="UsualButtonWidth">75</sys:Double>
    <sys:Double x:Key="DoubleButtonWidth">150</sys:Double>
    <sys:Double x:Key="UsualHeight">23</sys:Double>
    <sys:Double x:Key="UsualWidth">120</sys:Double>
    <sys:Double x:Key="UsualDoubleWidth">400</sys:Double>
    <sys:Boolean x:Key="BoolTrue">true</sys:Boolean>
    <sys:Boolean x:Key="BoolFalse">false</sys:Boolean>

    <Style TargetType="Button">
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="Height" Value="{StaticResource UsualHeight}"/>
        <Setter Property="Width" Value="{StaticResource UsualButtonWidth}"/>
    </Style>

</ResourceDictionary>